
@{
    ViewData["Title"] = "EditContractor";
}

<h1>EditContractor</h1>


@model Contractor

<h1>EditContractor</h1>



<form method="post" asp-action="@ViewData["Title"]">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input type="hidden" asp-for="ContractorId" name="ContractorId" class="form-control" value="@Model?.ContractorId" />
    <div class="form-group">
        <label asp-for="HourlyRate" class="control-label">Hourly Rate</label>
        <input asp-for="HourlyRate" name="HourlyRate" class="form-control" value="@Model?.HourlyRate" />
        <span asp-validation-for="HourlyRate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ContractorState" class="control-label">Contractor State</label>
        <input asp-for="ContractorState" name="ContractorState" class="form-control" value="@Model?.ContractorState" />
        <span asp-validation-for="ContractorState" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>


</form>

